<mvc:View
    controllerName="vcp.vcpseedordercreationnew.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:smarttable="sap.ui.comp.smarttable"
    xmlns:m="sap.m"
    xmlns:smartfilterbar="sap.ui.comp.smartfilterbar"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:ux="sap.uxap"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:u="sap.ui.unified"
    xmlns:f="sap.f"
    height="100%"
>
<Page id="idPage" showFooter="true">
    <ux:ObjectPageLayout id="ObjectPageLayout" showFooter="true" headerContentPinnable="true">
        <ux:headerTitle>
            <ux:ObjectPageDynamicHeaderTitle>
                <ux:expandedHeading>
                    <HBox>
                     <HBox>
                        <!-- <Label id="idVariantName" required="false" text="" class="Text"/>
                        <ToggleButton id="idDropDown" icon="sap-icon://slim-arrow-down" press="onDropDownPress"/>                   -->
                        <Title
                            text="{i18n>title}"
                            class="boldText"
                            titleAlignment="Center"
                            wrapping="true"
                        />
                         </HBox>
                    </HBox>
                </ux:expandedHeading>
                <ux:snappedHeading>
                    <HBox
                        fitContainer="true"
                        alignItems="Center"
                    >
                        <Title
                            text="{i18n>title}"
                            wrapping="true"
                        />
                    </HBox>
                </ux:snappedHeading>
                <ux:navigationActions>
                    <Button
                        class="classHdr"
                        icon="sap-icon://sys-help"
                        id="idNav3"
                        press="onNavPress"
                        type="Emphasized"
                        tooltip="Help Document"
                    />
                </ux:navigationActions>
            </ux:ObjectPageDynamicHeaderTitle>
        </ux:headerTitle>
        <ux:headerContent>
            <FlexBox
                wrap="Wrap"
                fitContainer="true"
            >
                <l:Grid defaultSpan="XL3 L3 M6 S12">
                    <!-- <VBox>
                        <Label text="" />
                        <SearchField
                            id="headSearch2"
                            liveChange="handleSearch2"
                            placeholder=""
                        />
                    </VBox> -->
                    <VBox>
                        <Label
                            text="Configurable Product"
                            required="true"
                        />
                        <Input
                            id="prodInput"
                            placeholder="Configurable Product"
                            value=""
                            showValueHelp="true"
                            valueHelpOnly="true"
                            valueHelpRequest="handleValueHelp2"
                        />
                    </VBox>
                    <VBox>
                        <Label
                            text="Demand Location"
                            required="true"
                        />
                        <Input
                            id="idloc"
                            value=""
                            placeholder="Demand Location"
                            showValueHelp="true"
                            valueHelpOnly="true"
                            valueHelpRequest="handleValueHelp2"
                        />
                    </VBox>

                    <VBox>
                        <Label
                            text="Date Range"
                            required="true"
                        />
                        <DateRangeSelection
                            id="idDateRange"
                            delimiter="To"
                            dateValue=""
                            secondDateValue=""
                            valueFormat="yyyy-MM-dd"
                            displayFormat="yyyy-MM-dd"
                            change="handleDateChange"
                            maxDate=""
                        />
                    </VBox>
                    <!-- <HBox> -->
                    <HBox>
                    <VBox>
                        <Label
                            text="Customer Group"
                            required="true"
                        />
                        <Input
                            id="idCustGrp"
                            placeholder="Customer Group"
                            value=""
                            showValueHelp="true"
                            width= "250px"
                            valueHelpOnly="true"
                            valueHelpRequest="handleValueHelp2"
                        />
                    </VBox>
                    <VBox class="idVBox1">
                        <Label text="" />
                        <HBox>
                            <Button
                                text="Go"
                                type="Emphasized"
                                press="onGetData"
                                tooltip="Get data based on filters"
                                class="sapUiTinyMarginEnd"
                            />
                            <Button
                                text="Reset"
                                type="Transparent"
                                press="onResetDate"
                                tooltip="Reset all Filters"
                            />
                        </HBox>
                    </VBox>
                    </HBox>
                </l:Grid>
            </FlexBox>
        </ux:headerContent>
        <ux:sections>
            <ux:ObjectPageSection>
                <ux:subSections>
                    <ux:ObjectPageSubSection>
                        <ux:blocks>
                            <Wizard
                                id="CreateProductWizard"
                                class="sapUiResponsivePadding--header sapUiResponsivePadding--content"
                                complete="wizardCompletedHandler"
                                visible="false"
                            >
                                <WizardStep
                                    id="idUniqueChar"
                                    title="Unqiue Characteristics"
                                    validated="true"
                                >
                                    <MessageStrip
                                        class="sapUiSmallMarginBottom"
                                        text="This is an optional step "
                                        showIcon="true"
                                    />
                                    <VBox>
                                        <Label
                                            text="Partial Product "
                                            required="true"
                                        />
                                        <m:MultiInput
                                            id="idpartInput"
                                            width="400px"
                                            placeholder="Partial Products"
                                            value=""
                                            showValueHelp="true"
                                            valueHelpOnly="true"
                                            valueHelpRequest="handleValueHelp2"
                                        />
                                    </VBox>
                                    <Toolbar
                                        id="_IDGenToolbar1"
                                        visible="false"
                                    >
                                        <SearchField
                                            id="idCharSearch"
                                            liveChange="handleSearch1"
                                            placeholder="Class/Char Name, Char Value" visible="true"
                                        />
                                    </Toolbar>
                                      <Table id="idCharTable" items="{path: '/items1'}" visible="false" sticky="ColumnHeaders" growingThreshold="1000" growingScrollToLoad="true" growing="true"  selectionChange="onTableItemsSelect" mode="MultiSelect">
                    <columns>
                    <Column id="_IDGenColumn11" hAlign="Center" vAlign="Middle">
                        <Text id="_IDGenText11" text="Characteristic Name" />
                    </Column>
                    <Column id="_IDGenColumn22" hAlign="Center" vAlign="Middle">
                        <Text id="_IDGenText22" text="Characteristic Value"/>
                    </Column>
                    <Column id="_IDGenColumn23" hAlign="Center" vAlign="Middle" visible="false">
                        <Text id="_IDGenText23" text="Characteristic Value Number"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="_IDGenColumnListItem11">
                        <cells>
                            <ObjectIdentifier title="{CHAR_DESC}" text="{CHAR_NUM}" />
                            <ObjectIdentifier title="{CHAR_VALUE}" text="{CHARVAL_DESC}"/>
                            <ObjectIdentifier  text="{CHARVAL_NUM}"/>
                        </cells>
                    </ColumnListItem>
                </items>
                    </Table>
                                    <HBox
                                        id="idHBox"
                                        alignItems="End"
                                        justifyContent="End"
                                        width="100%"
                                        visible="false"
                                    >
                                        <SegmentedButton
                                            width="320px"
                                            selectionChange="getSelectedBtn"
                                        >
                                            <items>
                                                <SegmentedButtonItem
                                                    icon="sap-icon://save"
                                                    text="Save"
                                                    press="onCharsLoad"
                                                />
                                                <SegmentedButtonItem
                                                    icon="sap-icon://cancel"
                                                    text="Cancel"
                                                    press="onListCancel"
                                                />
                                            </items>
                                        </SegmentedButton>
                                    </HBox>
                                </WizardStep>
                                <WizardStep
                                    id="idCharOptPer"
                                    validated="false"
                                    activate="optionalStepActivation"
                                    title="Characteristic Value Option Percentage"
                                    
                                >
                                <MessageStrip
                                        class="sapUiSmallMarginBottom"
                                        text="This is a compulsory step to generate seed orders "
                                        showIcon="true"
                                    />
                                    <VBox>
                                        <Label
                                            text="Characteristic Name"
                                            labelFor="idCharName"
                                            id="idLabelText"
                                            required="true"
                                        />
                                        <MultiInput
                                            id="idCharName"
                                            value=""
                                            width="400px"
                                            valueHelpOnly="true"
                                            placeholder="Characteristic Name"
                                            showValueHelp="true"
                                            valueHelpRequest="handleValueHelp2"
                                            class="inputClass"
                                        />
                                    </VBox>
                                    <VBox
                                        items="{path:'/setPanel'}"
                                        id="idVBox"
                                        visible="false"
                                    >
                                        <Panel
                                            id="_IDGenPanelNew"
                                            expandable="true"
                                            expanded="false"
                                            headerText="{CHAR_NAME}"
                                        >
                                            <content>
                                                <Table
                                                    id=""
                                                    items="{path: 'child'}"
                                                    growingScrollToLoad="true"
                                                    growingThreshold="1000"
                                                    growing="true"
                                                    rememberSelections="false"
                                                    itemPress="onhandlePress"
                                                    mode="SingleSelectMaster"
                                                    selectionChange="onhandlePress"
                                                    sticky="ColumnHeaders"
                                                >
                                                    <columns>
                                                        <Column
                                                            hAlign="Center"
                                                            vAlign="Middle"
                                                        >
                                                            <Text
                                                                text="Characteristic Value"
                                                            />
                                                        </Column>
                                                        <Column
                                                            hAlign="Center"
                                                            vAlign="Middle"
                                                        >
                                                            <Text
                                                                text="Option Percentage"
                                                            />
                                                        </Column>
                                                    </columns>
                                                    <items>
                                                        <ColumnListItem>
                                                            <cells>
                                                                <VBox>
                                                                    <Text
                                                                        text="{CHAR_VALUE} "
                                                                    />
                                                                    <Text
                                                                        text="{CHARVAL_DESC}"
                                                                    />
                                                                </VBox>
                                                                <Input
                                                                    value="{CHARVAL_INPUT}"
                                                                    enabled="true"
                                                                    liveChange="onOptEnter"
                                                                />
                                                            </cells>
                                                        </ColumnListItem>
                                                    </items>
                                                </Table>
                                            </content>
                                        </Panel>
                                    </VBox>
                                    <HBox id="idHBox1" alignItems="End" justifyContent="End" width="100%" visible="false">
									<SegmentedButton width="320px"	selectionChange="getCharBtn">
										<items>
											<SegmentedButtonItem id="idSaveBtn" icon="sap-icon://save" text="Save" enabled="false" press="onCharSave"/>
											<SegmentedButtonItem id="idCancelBtn" icon="sap-icon://cancel" text="Cancel" press="onCharCancel" />
										</items>
									</SegmentedButton>
								</HBox>	
                                    
                                </WizardStep>
                            </Wizard>
                        </ux:blocks>
                    </ux:ObjectPageSubSection>
                </ux:subSections>
            </ux:ObjectPageSection>
        </ux:sections>
    </ux:ObjectPageLayout>
    <footer>
    <OverflowToolbar>
                <ToolbarSpacer/>
                <Button id="idGenSeedOrder" text="Generate Seed Order" enabled="false" press="onGenSeedOrder"/>
                <!-- <Button text="Cancel"/> -->
            </OverflowToolbar>
            </footer>
    </Page>
</mvc:View>
